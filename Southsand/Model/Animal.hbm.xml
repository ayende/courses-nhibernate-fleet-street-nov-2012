	namespace="Southsand.Model">


	<class name="Animal" abstract="true" table="Animals">
		<id name="Id">
			<generator class="hilo"/>
		</id>
		<property name="Name"/>
		<union-subclass name="Dog" table="Dogs">
			<property name="Barks"/>
		</union-subclass>

		<union-subclass name="Cat" table="Cats">
			<property name="Purrs"/>
		</union-subclass>
	</class>
