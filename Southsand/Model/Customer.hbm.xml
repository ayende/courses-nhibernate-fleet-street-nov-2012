<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
	assembly="Southsand"
	namespace="Southsand.Model">

	<class name="Customer" table="Customers">
		<id name="Id">
			<generator class="identity"/>
		</id>
		<property name="Name"/>
		<property name="Birthday"/>
		<many-to-one name="HomeAddress"/>

		<bag name="Orders" cascade="all" inverse="true">
			<key column="Customer"/>
			<one-to-many class="Order"/>
		</bag>

		<set name="Locations" table="CustomerLocations">
			<key column="Customer"/>
			<many-to-many class="Location" column="Location"/>
		</set>

	</class>

	<class name="Location" table="Locations">
		<id name="Id">
			<generator class="identity"/>
		</id>

		<bag name="Customers" table="CustomerLocations" inverse="true" >
			<key column="Location"/>
			<many-to-many class="Customer" column="Customer"/>
		</bag>
	</class>


</hibernate-mapping>