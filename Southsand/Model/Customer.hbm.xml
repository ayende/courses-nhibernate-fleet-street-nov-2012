<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
	assembly="Southsand"
	namespace="Southsand.Model">

	<class name="Customer"  table="Customers">
		<id name="CustomerId">
			<generator class="increment"/>
		</id>
		<property name="Email"/>
		<one-to-one class="Person"
		 name="Person"
		 property-ref="Customer"/>
	</class>

	<class name="Person" 	table="People">
		<id name="PersonId">
			<generator class="increment"/>
		</id>
		<property name="Name"/>
		<many-to-one name="Customer" column="CustomerId" unique="true"/>
	</class>
</hibernate-mapping>