<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
	assembly="Southsand"
	namespace="Southsand.Model">

	<class name="Customer" table="Customers">
		<id name="Id">
			<generator class="identity"/>
		</id>
		<property name="Name"/>
		<property name="Birthday"/>
		<many-to-one name="HomeAddress"/>

		<bag name="Orders" cascade="all" inverse="true">
			<key column="Customer"/>
			<one-to-many class="Order"/>
		</bag>

		<bag name="Locations" table="Visits" inverse="true">
			<key column="Customer"/>
			<many-to-many column="Location" class="Location"/>
		</bag>

	</class>

	<class name="Location" table="Locations">
		<id name="Id">
			<generator class="identity"/>
		</id>
		<property name="Name"/>
	</class>

	<class name="Visit" table="Visits">
		<id name="Id">
			<generator class="identity"/>
		</id>
		<property name="At"/>
		<property name="Duration"/>
		<many-to-one name="Customer"/>
		<many-to-one name="Location"/>
	</class>

</hibernate-mapping>